# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5050
DB_URI=mongodb://localhost:27017/bidding_website

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# CORS Configuration
# Primary frontend URL (development)
FRONTEND_URL=http://localhost:5173

# Production frontend URL (leave empty for development)
PRODUCTION_URL=

# Additional allowed origins (comma-separated, leave empty if not needed)
# Example: ALLOWED_ORIGINS=https://staging.yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=

# Environment Mode
NODE_ENV=development

# Payment Gateway (eSewa)
ESEWA_MERCHANT_CODE=EPAYTEST
ESEWA_MERCHANT_SECRET=your_esewa_secret
ESEWA_API_URL=https://rc-epay.esewa.com.np/api/epay/main/v2/form
ESEWA_VERIFY_URL=https://rc-epay.esewa.com.np/api/epay/transaction/status/

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Google reCAPTCHA v3
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Session Management
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Payment Security
PAYMENT_ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_here
ESEWA_WEBHOOK_IPS=
MAX_PAYMENT_AMOUNT=100000
MIN_PAYMENT_AMOUNT=10
PAYMENT_VELOCITY_LIMIT=3
PAYMENT_VELOCITY_WINDOW=3600000

# Audit & Monitoring
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90
FRAUD_DETECTION_ENABLED=true
HIGH_VALUE_TRANSACTION_THRESHOLD=10000
